		<database-class>br.ufal.rsacripto.persistence.agrok.mechanism.PostgresqlDatabase</database-class>

		<parameter>
			<parameter-name>user</parameter-name>
			<parameter-value>marcello</parameter-value>
		</parameter>
		<parameter>
			<parameter-name>password</parameter-name>
			<parameter-value>secret</parameter-value>
